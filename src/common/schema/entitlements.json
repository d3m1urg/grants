{
  "$schema":    "http://json-schema.org/draft-04/schema#",
  "title":      "Grants.js common entitlements schema",
  "type":       "object",
  "required":   ["name", "label", "children", "revision"],
  "properties":{
    "name":       {"$ref": "#/definitions/child/properties/name"},
    "label":      {"$ref": "#/definitions/child/properties/label"},
    "children":   {"$ref": "#/definitions/child/properties/children"},
    "revision":   {"type": "string"}
  },
  "definitions":  {
    "child":  {
      "type":       "object",
      "required":   ["name", "label", "type", "init", "comply"],
      "properties": {
        "name":       {"type": "string"},
        "label":      {"type": "string"},
        "type":       {"type": "string"},
        "init":       {"type": ["boolean", "number", "string", "array", "object", "null"]},
        "comply":   {
          "type": "object",
          "required": ["rules"],
          "properties": {
            "rules": {
              "type": "array",
              "items": {
                "oneOf": [
                  {"type":"string"},
                  {
                    "type": "array",
                    "items": [ {"type": "string"} ],
                    "additionalItems": true
                  },
                ]
              }
            },
            "define": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "fn", "errorText"],
                "properties": {
                  "name": {"type": "string"},
                  "description": {"type": "string"},
                  "fn": {"type": "string"},
                  "errorMessage": {"type": "string"}
                }
              }
            }
          }
        },
        "children":   {
          "type":   "array",
          "items":  {"$ref": "#/definitions/child"}
        }
      }
    }
  }
}