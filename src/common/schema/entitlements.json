{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Grants.js common entitlements schema",
  "type": "object",
  "required": [ "name", "label", "children", "revision" ],
  "properties": {
    "name": {
      "$ref": "#/definitions/child/properties/name"
    },
    "label": {
      "$ref": "#/definitions/child/properties/label"
    },
    "comply": {
      "$ref": "#/definitions/child/properties/comply"
    },
    "children": {
      "$ref": "#/definitions/child/properties/children"
    },
    "description": {
      "$ref": "#/definitions/child/properties/description"
    },
    "revision": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "child": {
      "type": "object",
      "required": [ "name", "label", "type", "init", "comply" ],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[0-9A-Za-z\\.\\-_]+$"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [ "boolean", "number", "string", "enum", "range" ]
        },
        "init": {
          "type": [ "boolean", "number", "string", "array", "null" ]
        },
        "disabled": {
          "type": [ "boolean", "number", "string", "array", "null" ]
        },
        "comply": {
          "type": "object",
          "required": [ "rules" ],
          "properties": {
            "rules": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": [ { "type": "string" } ],
                    "additionalItems": true
                  }
                ]
              }
            },
            "define": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [ "name", "label", "description", "fn", "args", "errorMessage" ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "fn": {
                    "type": "string"
                  },
                  "args": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["type", "required", "label"],
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["boolean", "number", "string", "array", "object", "null", "$self"]
                        },
                        "required": {
                          "type": "boolean"
                        },
                        "label": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    },
                    "additionalItems": false
                  },
                  "errorMessage": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/child"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
